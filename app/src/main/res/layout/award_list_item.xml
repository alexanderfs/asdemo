<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:alex="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F3F3F3"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/award_basic_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/lottery_icon"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:id="@+id/lottery_basic_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lottery_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:text="--"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/issue_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:singleLine="true"
                    android:textColor="#ff686868"
                    android:textSize="15sp"
                    android:text="--"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_below="@id/line1"
                android:id="@+id/award_lucky_num_stub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        
        </RelativeLayout>
        <ImageView android:id="@+id/right_arraw_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_arrow_right"
            android:paddingRight="8dip"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="#CFCFCF"/>
    <LinearLayout
        android:id="@+id/biggest_award_info"
        android:layout_below="@id/award_basic_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFDE2">
        
        <TextView
            android:id="@+id/biggest_award_owner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="本期大奖得主: --"
            android:textSize="15sp"
            android:textColor="#000"
            android:textStyle="bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:padding="3dp">
            <TextView
                android:id="@+id/biggest_award_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="--元"
                android:textSize="15sp"
                android:textColor="#8f5c0d"
                android:gravity="center"
            />
            <TextView
                android:id="@+id/more_awards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="7dp"
                android:layout_marginRight="15dp"
                android:text="更多大奖"
                android:textSize="15sp"
                android:textColor="#34342D"
                android:layout_alignParentRight="true"/>
            </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/dotline"
        />
        <TextView
            android:id="@+id/current_award_jackpot"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="当前奖池: --元"
            android:textSize="15sp"
            android:textColor="#A9A685"/>
        <demo.alexan.com.view.DottedLineView
            android:layout_width="match_parent"
            android:layout_height="2px"
            alex:my_color="#0000FF"
            android:layerType="software"
            />
       
    </LinearLayout>
    

</LinearLayout>