<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="demo.alexan.com.myapplication.FusionScrollActivity">
    <RadioGroup
        android:id="@+id/colorful_ball_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#DA2728">
        <RadioButton
            android:id="@+id/redball_trend"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="红球走势"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:checked="true"
            android:background="#DA2728"/>
        <RadioButton
            android:id="@+id/blueball_trend"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="篮球走势"
            android:textColor="#EDABAB"
            android:textSize="17sp"
            android:background="#DA2728"/>
    </RadioGroup>

    <demo.alexan.com.view.AllInChartView
        android:id="@+id/main_frame"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
    </demo.alexan.com.view.AllInChartView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#D5D5D5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="关闭"
            android:textSize="17sp"
            android:background="#F5F5F5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:textSize="17sp"
            android:textColor="#E71616"
            android:background="#F5F5F5"/>
    </LinearLayout>

</LinearLayout>
